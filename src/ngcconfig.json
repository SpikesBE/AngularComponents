{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "../dist/",
    "lib": ["dom", "es6"],
    "stripInternal": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "./node_modules",
    "gulpfile.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "./tmp/**/*",
    "package.json"
  ],
  "angularCompilerOptions": {
    "genDir": "compiled"
  }
}